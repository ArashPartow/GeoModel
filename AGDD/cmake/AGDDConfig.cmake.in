# Find the dependencies of the AGDD target(s).
include( CMakeFindDependencyMacro )
find_dependency( GeoModelCore @GeoModelCore_VERSION@ CONFIG EXACT )
find_dependency( GeoModelTools @GeoModelTools_VERSION@ CONFIG EXACT )
find_dependency( Eigen3 @Eigen3_VERSION@ CONFIG EXACT )
find_dependency( XercesC @XercesC_VERSION@ CONFIG EXACT )

# Include the exported configuration of GeoModelCore.
get_filename_component( SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH )
include( ${SELF_DIR}/AGDDTargets.cmake )

# Set the version of the installed project.
set( AGDD_VERSION "@PROJECT_VERSION@" )

# Print some standard messages about the package being found.
include( FindPackageHandleStandardArgs )
find_package_handle_standard_args( AGDD
    FOUND_VAR AGDD_FOUND
    REQUIRED_VARS SELF_DIR
    VERSION_VAR AGDD_VERSION )

# Clean up.
unset( SELF_DIR )
